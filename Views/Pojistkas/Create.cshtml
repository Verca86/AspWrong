
@model AspWrong.Models.Pojistka

@{
    ViewData["Title"] = "Doplňující údaje";
}
<h5>Vyberte vhodné (bod 1-4) a napiště ANO/NE </h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Majetek" class="control-label">Pojištění majetku</label>
                <input asp-for="Majetek" class="form-control" />
                <span asp-validation-for="Majetek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Osoby" class="control-label">Pojištění osob</label>
                <input asp-for="Osoby" class="form-control" />
                <span asp-validation-for="Osoby" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zivot" class="control-label">Životní pojištění</label>
                <input asp-for="Zivot" class="form-control" />
                <span asp-validation-for="Zivot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uraz" class="control-label">Úrazové pojištění</label>
                <input asp-for="Uraz" class="form-control" />
                <span asp-validation-for="Uraz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Predmet" class="control-label">Předmět pojištění</label>
                <input asp-for="Predmet" class="form-control" />
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Od" class="control-label">Platnost pojištění od:</label>
                <input asp-for="Od" class="form-control" />
                <span asp-validation-for="Od" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Do" class="control-label">Platnost pojištění do:</label>
                <input asp-for="Do" class="form-control" />
                <span asp-validation-for="Do" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Potvrdit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-controller="Article1" asp-action="Create">Zpět</a>
    <p></p>
    <a asp-controller="Home" asp-action="Pojisteni">Zpět na hlavní stránku</a>
</div>

