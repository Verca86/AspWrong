@model IEnumerable<AspWrong.Models.Article2>


@{
    ViewData["Title"] = "Vyhledání pojistné události";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Vyhledat" method="get">
            <div class="form-group">
                <label for="SearchString">Vyhledat podle příjmení</label>
                <input type="text" name="SearchString"
                       value="@ViewData["Vyhledat"]" />
                <input type="submit" value="Hledat" class="btn btn-primary" />
            </div>
            <p></p>
        </form>
    </div>
</div>
<p></p>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jméno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Příjmení)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Popis)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jméno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Příjmení)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Popis)
                    </td>
                    <td>
                        <p>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editovat</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detail</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Vymazat</a>
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Udalosti">Zpět na hlavní stránku</a>
</div>